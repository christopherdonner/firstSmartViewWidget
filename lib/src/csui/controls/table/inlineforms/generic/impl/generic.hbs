<form class="csui-inlineform-group csui-inlineform-group-generic-name">
  <input type="text" value="{{name}}" placeholder="{{namePlaceholder}}"
         class="binf-form-control csui-inlineform-input-name">
  {{#if formModeIsEdit }}
    <button type="button" class="csui-btn-edit-cancel binf-btn"><span class="icon edit-cancel"
                                                   title="{{EditCancelTooltip}}"></span></button>
  {{ else }}
    <button type="button" class="csui-btn-metadata binf-btn"><span class="icon icon-toolbar-metadata"></span></button>
    <button type="button" class="csui-btn-save csui-btn binf-btn binf-btn-default">{{SaveButtonLabel}}</button>
    <button type="button" class="csui-btn-cancel csui-btn binf-btn">{{CancelButtonLabel}}</button>
  {{/if}}
</form>
{{#if haveErrorMessage}}
  <div class="csui-inlineform-group csui-inlineform-group-error" role="alert">
    <div class="binf-text-danger">{{errorMessage}}</div>
  </div>
{{/if}}

